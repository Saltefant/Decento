        <h1>Opdater brugeroplysninger</h1>

        <%  if (!user.userinformation.firstName)
        user.userinformation.firstName = '(ikke udfyldt)'
            if (!user.userinformation.lastName)
        user.userinformation.lastName = '(ikke udfyldt)' %>

        <form action="/updateuser" method="POST" id="infoForm">
            <label>Fornavn:</label>
            <input type="text" name="firstName" value="<%=user.userinformation.firstName%>">

            <label>Efternavn:</label>
            <input type="text" name="lastName" value="<%=user.userinformation.lastName%>">

            <label>Telefon nr.:</label>
            <input type="text" name="phone" value="<%=user.userinformation.phone%>">

            <label>Email:</label>
            <input type="text" name="email" value="<%=user.userinformation.email%>">

            <button type="submit">Opdater</button>
        </form>
    </div>
