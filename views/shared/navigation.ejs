<!--Navigation-->
<nav>
  <div id="removeJump">
    <div class="navigation" id="navigation">
      <div class="hidefast">
        <a class="left hidden" id="nav-logo" href="/" tabindex="0"><img class="nav-logo" src="/images/icon.jpg"></a>
      </div>
        <a id="linkId" class="collapsed-navigation-icon left" onclick="ResponsiveFunction()">&#9776;</a>
        <a class="left" href="/nyheder" tabindex="0">Nyheder</a>
        <a class="left" href="/cases" tabindex="0">Cases</a>
        <a class="left" href="/kontakt" tabindex="0">Kontakt</a>

        <%try{ if (user.local.role){ %>
        <a class="left" id="admin" href="/profile" tabindex="0"><%= user.local.username %></a> 
        <a class="right rightend" href="/logout"><img src="/images/SoMe icons/nokey.png" style="height:100%" title="Logout"></a> 
        <%}} catch(err) {%>
          <a class="right rightend" onclick="document.getElementById('modalId').style.display='block'" cursor="pointer" title="Login"><img src="/images/SoMe icons/key.png" style="height:100%"></a> 
        <%}%>
